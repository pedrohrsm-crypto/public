{
  "name": "ongconnect",
  "version": "1.0.0",
  "description": "ONGConnect - Modern accessible ongconnect website with WCAG 2.1 AA compliance",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build", 
    "preview": "vite preview",
    "serve": "http-server public -p 3000 -c-1",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "test": "npm run test:a11y",
    "test:a11y": "node tests/a11y/run-tests.js",
    "test:html": "html-validate public/pages/*.html --config tests/a11y/.htmlvalidate.json",
    "test:pa11y": "pa11y http://localhost:3000/pages/ongconnectPro.html --standard WCAG2AA",
    "test:lighthouse": "lighthouse http://localhost:3000/pages/ongconnectPro.html --output html --output-path ./reports/lighthouse.html",
    "accessibility": "pa11y http://localhost:3000",
    "accessibility:ci": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "validate:html": "html-validate public/*.html",
    "validate:css": "css-validator src/**/*.css",
    "analyze": "npm run lint && npm run accessibility && npm run lighthouse",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run validate:html"
  },
  "keywords": [
    "ongconnect",
    "accessibility",
    "wcag",
    "pwa",
    "responsive",
    "modern-frontend"
  ],
  "author": "ONGConnect Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-accessibility": "^2.2.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-a11y": "^1.2.3",
    "prettier": "^3.2.0",
    "vite": "^5.0.0",
    "pa11y": "^7.0.0",
    "pa11y-ci": "^3.1.0",
    "lighthouse": "^11.0.0",
    "html-validate": "^8.0.0",
    "css-validator": "^2.0.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "web-vitals": "^3.5.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/ongconnect.git"
  },
  "bugs": {
    "url": "https://github.com/username/ongconnect/issues"
  },
  "homepage": "https://ongconnect.netlify.app",
  "config": {
    "port": 3000,
    "host": "localhost"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  }
}
